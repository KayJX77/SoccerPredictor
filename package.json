{
  "name": "synapse-soccer-prophet",
  "version": "1.0.0",
  "description": "Football Prediction & Analysis Suite - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",
    "electron-dev": "electron . --enable-logging",
    "build-win": "electron-builder --win",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Synapse Soccer Prophet",
  "license": "ISC",
  "keywords": ["football", "soccer", "prediction", "analysis", "desktop"],
  "dependencies": {
    "electron": "^37.4.0",
    "express": "^5.1.0"
  },
  "build": {
    "appId": "com.synapse.soccerprophet",
    "productName": "Synapse Soccer Prophet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "public/**/*",
      "data/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
